@model crud.Models.Students

@{
    ViewData["Title"]="Add Students";
}
<div class="container mt-4">
    <h2>Add Student</h2>

    <form asp-action="Create" method="post">
        <div class="row">

            <div class="col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label asp-for="PhoneNumber">Contact Number</label>
                <input asp-for="PhoneNumber" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-select" required>
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="col-12">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" rows="3" required></textarea>
            </div>

            <div class="mt-3">
                <button class="btn btn-success">Save</button>
                <a href="/Students/Index" class="btn btn-secondary">Cancel</a>
            </div>

        </div>
    </form>
</div>
